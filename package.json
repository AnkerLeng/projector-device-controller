{
  "name": "projector-manager",
  "version": "1.1.0",
  "description": "投影设备管理器 - 支持TCP和HTTP协议的投影仪控制系统",
  "main": "src-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "node electron.js",
    "electron:dev": "concurrently \"vite --host 127.0.0.1\" \"wait-on http://127.0.0.1:5173 && cross-env NODE_ENV=development electron src-electron/main.js\"",
    "electron:simple": "electron src-electron/main.js",
    "electron:build": "vite build && electron-builder",
    "electron:pack": "electron-builder --dir",
    "release": "vite build && electron-builder --publish=onTagOrDraft",
    "lint": "eslint src --ext .js,.vue",
    "test": "vitest"
  },
  "dependencies": {
    "@ant-design/icons-vue": "^7.0.1",
    "ant-design-vue": "^4.2.6",
    "axios": "^1.11.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "update-electron-app": "^3.1.1",
    "vue": "^3.5.18"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^25.0.0",
    "electron-builder": "^24.6.3",
    "eslint": "^8.45.0",
    "eslint-plugin-vue": "^9.15.1",
    "vite": "^7.1.1",
    "vitest": "^3.2.4",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.projector.manager",
    "productName": "光子运动 - 投影设备管理器",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "src-electron/**/*",
      "app.png",
      "app.ico",
      "app-update.yml"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "app.png"
    },
    "win": {
      "target": "nsis",
      "icon": "app.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "app.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "app.ico",
      "uninstallerIcon": "app.ico"
    },
    "publish": {
      "provider": "github",
      "owner": "AnkerLeng",
      "repo": "projector-device-controller",
      "private": false,
      "releaseType": "release"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:AnkerLeng/projector-device-controller.git"
  },
  "homepage": "https://github.com/AnkerLeng/projector-device-controller#readme",
  "keywords": [
    "projector",
    "device-management",
    "tcp",
    "http",
    "electron",
    "vue"
  ],
  "author": "Projector Manager Team",
  "license": "MIT"
}
